/* pages/message-board/index.wxss */
.body {
  background: #fff;
  height: 100%;
}

.article {
  padding: 30rpx;
  background: #fff;
}

.tips {
  text-align: right;
  color: #f00;
  font-size: 14px;
  margin: 20rpx 0;
}

.messages-input {
  border: 1px solid #ddd;
  font-size: 14px;
  width: 100%;
  padding: 10px 0;
  text-indent: 10px;
  border-radius: 4px;
}

.mesg-list {
  margin-top: 40rpx;
  font-size: 14px;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #e5e5e5;
}

.mesg-list:last-child {
  border: none;
}

.mesg-list .head {
  font-size: 18px;
  color: #333;
}

.mesg-list .content {
  margin: 20rpx 0;
  text-indent: 10px;
  line-height: 23px;
}

.mesg-list .date {
  font-size: 12px;
  color: #7d7d7d;
  text-align: right;
}