.type-box {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.type-navbar-item {
  padding: 15px 0;
  font-size: 14px;
  color: #23303a;
  line-height: 1.2;
  border-bottom: 4px solid #fff;
  width:80%;
  text-align:center;
}

.type-item-on {
  color: #cd3a3a;
  border-bottom: 8rpx solid #cd3a3a;
}

.line-gray {
  width: 100%;
  height: 15rpx;
  background: #fafafa;
}

.recommend {
  width: 100%;
  text-align: center;
  padding-top: 20rpx;
  background: #fff;
  color: #333;
  font-size: 40rpx;
}

.service-items {
  margin: 0 20rpx;
  box-sizing: border-box;  
  overflow: hidden;  
}

.service-items .up {
  height: 350rpx;
  position: relative;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.service-items .up image {
  display: inline-block;
  width: 100%;
  height: 350rpx;
  box-sizing: border-box;
}

.service-items .up text {
  display: inline-block;
  position: absolute;
  left: 250rpx;
  top: 150rpx;
  color: #fff;
  font-weight: bold;
  font-size: 40rpx;
  /* text-shadow: 1px 0.5px #fafafa; */
}

.service-items .down {
  display: flex;
}

.service-items .left,
.service-items .right {
  flex: 1;
  position: relative;
}

.service-items .left {
  margin-right: 20rpx
}

.service-items .left image,
.service-items .right image {
  display: inline-block;
  width: 100%;
  height: 360rpx;
}

.service-items .left text,
.service-items .right text {
  position: absolute;
  left: 80rpx;
  top: 160rpx;
  z-index: 200;
  color: #fff;
  font-weight: bold;
  font-size: 40rpx;
}

.service-items .layer {
  width: 100%;
  height: 100%;
  background: #333;
  opacity: .2;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 100;
  overflow: hidden;  
}

.about-us {
  padding: 20rpx;
}

.about-us  {
  text-indent:2em;  
}

.about-us text {
  font-size: 24rpx;
  color: #333;
}

.contact-us {
  margin: 30rpx 40rpx;
}

.contact-us .adress {
  overflow: hidden;  
  font-size: 28rpx;
  margin: 40rpx 0;
  color: #333;
}

.contact-us .call button {
  color: #fff;
  background: #f60;
  text-align: center;
}