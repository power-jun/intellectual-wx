page {
  height: 100%;
}

.body {
  overflow: hidden;
  background: #fff;
  box-sizing: border-box;
}

.article {
  /* padding: 1px 0; */
  padding-bottom: 80rpx;
}

.swiper-container {
  width: 760rpx;
  position: relative;
}

.swiper_box {
  width: 100%;
  height: 400rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 70rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 50%;
  transition: all 0.6s;
  opacity: 0.5;
}

.swiper-container .dots .dot.active {
  width: 14rpx;
  opacity: 1;
}
