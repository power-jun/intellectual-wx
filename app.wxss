page {
  height: 100%;
}

.body {
  background-color: #f8f8f8;
  box-sizing: border-box;
}

.btn-box button {
  color: #fff;
  background: #f60;
  text-align: center;
  margin-top: 20rpx;
}

.huise {
  width: 100%;
  height: 40rpx;
}

.arrow {
  display: flex;
  align-items: center;
}

.arrow .text {
  font-size: 14px;
  color: #cd3a3a;
  line-height: 1.2;
}

.arrow .icon {
  position: relative;
  width: 20px;
  height: 20px;
  overflow: hidden;
}

.arrow .icon::before {
  position: absolute;
  top: 5px;
  left: 2px;
  z-index: 10;
  display: block;
  content: "";
  width: 8px;
  height: 8px;
  border-width: 2px 2px 0 0;
  border-style: solid;
  border-color: #ccc;
  transform: rotate(45deg);
}

.arrow .down::before {
  transform: rotate(135deg);
}

.no-more-goods {
  width: 100%;
  text-align: center;
  font-size: 22rpx;
  padding: 40rpx 0;
  color: #7d7d7d;
}

.no-datas {
  background: #fff;
  position: absolute;
  left: 0;
  top: 50%;
}
